<body>
  <div class="row">
    <div class="col-8 offset-2">
      <br />
      <h3>Edit Your Listing</h3>
      <br />
      <form
        method="post"
        novalidate
        enctype="multipart/form-data"
        class="needs-validation"
        action="/listings/<%= listing._id%>?_method=PUT"
      >
        <div>
          <label for="title" class="form-lable">Title</label>
          <input
            name="listing[title]"
            value="<%= listing.title %>"
            required
            type="text"
            class="form-control"
          /><br />
        </div>
        <div>
          <label for="description" class="form-lable">Description</label>
          <textarea
            name="listing[description]"
            clos="15"
            rows="8"
            required
            class="form-control"
          >
value="<%= listing.description %></textarea
          ><br />
        </div>
        <div>
          <label for="price" class="form-lable">Price</label>
          <input
            name="listing[price]"
            required
            class="form-control"
            value="<%= listing.price %>"
            type="number"
          /><br />
        </div>
        <div>
          <label for="image" class="form-lable">Original Image</label><br />
          <img src="<%=original1%>" alt="" /><br /><br />
        </div>
        <div>
          <label for="image" class="form-lable">Upload NewImage</label>
          <input name="listing[image]" class="form-control" type="file" /><br />
        </div>
        <div>
          <label for="country" class="form-lable">Country</label>
          <input
            name="listing[country]"
            required
            class="form-control"
            value="<%= listing.country %>"
            type="text"
          /><br />
        </div>
        <div>
          <label for="location" class="form-lable">Location</label>
          <input
            name="listing[location]"
            required
            class="form-control"
            value="<%= listing.location %>"
            type="text"
          /><br />
        </div>

        <button class="btn btn-primary">Edit</button>
      </form>
    </div>
  </div>
</body>
